    <div class="well">
        <% if(!currentUser) { %>
            <h5>You can't do that!</h5>
        <% } %>
        <% if(currentUser && currentUser.id == user._id) { %>
            <h4>Add Banner URL</h4>
            <form id="add-comment-form" action="/user/<%= user._id %>/banner" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="banner" required></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Change Banner</button>
                </div>
            </form>
        <% } %>
    </div>
</div>
