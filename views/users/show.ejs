<% include ../partials/header %>

<div class="thumbnail center-block" style="width: 80vw">
    <% if(user.banner) { %>
        <img class="text-center" src="<%= user.banner %>">
        
        <% if(currentUser && currentUser.id == user._id) { %>
            <a href="#collapseBannerForm" class="btnbanner btn btn-default" role="button" data-toggle="collapse" aria-expanded="false" aria-controls="collapseBannerForm">
                <i class="fas fa-edit"></i>
            </a>
        <% } %>
    <% } %>

    <% if(currentUser && currentUser.id == user._id && !user.banner) { %>
        <h3 class="text-center">You have no banner image</h3>
        <a href="#collapseBannerForm" style="width: 30vw" class="center-block btn btn-default btn-lg" role="button" data-toggle="collapse" aria-expanded="false" aria-controls="collapseBannerForm">
            Add Banner <i class="fas fa-edit"></i>
        </a>
    <% } %>
</div>

