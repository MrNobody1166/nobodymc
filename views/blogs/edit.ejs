<% include ../partials/header.ejs %>

<div class="row">
    <h1 class="text-center">Edit Blog</h1>
    <div class="new-form">
        <form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" name="blog[description]" rows="5" cols="70"><%= blog.description %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Create Blog</button>
            </div>
        </form>
        <a href="/home">Go Back</a>
    </div>
</div>

<% include ../partials/footer.ejs %>