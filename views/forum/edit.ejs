<% include ../partials/header.ejs %>

<div class="row">
    <h1 class="center">Edit <%= post.name %></h1>

    <div class="new-form">
        <form action="/forum/<%= post._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" type="text" name="post[title]" value="<%= post.title %>">
            </div>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" class="form-control" name="post[description]" value="<%= post.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/forum">Go Back</a>
    </div>
</div>

<% include ../partials/footer.ejs %>